{
  "hooks": {
    "before:init": ["npm run test"],
    "before:bump": ["npm run build"]
  },
  "git": {
    "pushRepo": "git@github.com:filerjs/filer.git",
    "tagName": "v%s"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "pushRepo": "git@github.com:filerjs/filer.git",
    "release": true,
    "releaseName": "Filer.js %s Released"
  }
}
